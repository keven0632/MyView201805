<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MytextView01">
        <!-- name 是名称，
        format是格式 color（颜色），string（文本），
        dimension（sp,dp）(宽高) ，integer（数字）
        reference 资源(drawable)
        ...-->
        <attr name="textColor" format="color"/>
        <attr name="textSize" format="dimension"/>
        <attr name="text" format="string"/>
        <attr name="maxLength" format="integer"/>
        <!--background 自定义View 是继承自View 背景都是View去管理的<attr name="background" format="reference"/>-->
        <!-- 枚举-->
        <attr name="inputType">
            <enum name="number" value="1"/>
            <enum name="string" value="2"/>
            <enum name="password" value="3"/>
        </attr>
    </declare-styleable>
</resources>